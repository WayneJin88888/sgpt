{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":preserveSemverRanges",
    ":enablePreCommit",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "stabilityDays": 7,
  "ignorePaths": [],
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "type:security"
    ],
    "stabilityDays": 0
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "require"
      ],
      "groupName": "GO modules",
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "separateMajorMinor": false
    },
    {
      "matchPackageNames": [
        "go"
      ],
      "allowedVersions": "<1.19.0",
      "postUpdateOptions": [
        "gomodTidy"
      ]
    },
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "description": "Update docker (multi-stage) base images",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "ARG IMAGE_*?.*?=(?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)$"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
